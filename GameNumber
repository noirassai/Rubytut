a = rand(16)
puts "Загаданно число от 0 до 15, отгадайте какое ? "
number = gets.chomp.to_i
if a == number
	abort "Вы угадали, ваше число: " + a.to_s
else
	if (number - a ).abs < 3 
	puts "Тепленько  братишка , продолжай , ты почти у цели" 
	else		
	puts "Холодно братишка"
	end
end

puts "Введи второе число"
number = gets.chomp.to_i
if a == number
	abort "Вы угадали, ваше число: " + a.to_s
else

	if (number - a ).abs < 3 
	puts "Тепленько  братишка , продолжай , ты почти у цели" 

	else		
	
	puts "Холодно братишка"
	end
end


puts "Введи третье число"

number = gets.chomp.to_i

if a == number
	abort "Вы угадали, ваше число: " + a.to_s
else

	if (number - a).abs < 3
	puts "Тепленько  братишка , продолжай , ты почти у цели" 

	else		
	puts "Холодно братишка"
	end
end
puts "Попытки исчерпаны , что бы продолжить , положите соточку на тел 89108382500. ".chomp 
puts "Правильное число : ".chomp + a.to_s
